<div class="row">
  <div class="col-sm-12">
    <h1>Nuevo Actor</h1>
  </div>
</div>
<div class="row"> 
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for :actor, url: actors_path do |f| %>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :bio %><br>
        <%= f.text_area :bio, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :birth_date %><br>
        <%= f.text_field :birth_date, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :birth_place %><br>
        <%= f.text_field :birth_place, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image_url %><br>
        <%= f.text_field :image_url, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :alive %><br>
        <%= f.text_field :alive, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :death_date %><br>
        <%= f.text_field :death_date, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :death_place %><br>
        <%= f.text_field :death_place, class: 'form-control' %>
      </div>
      <p>
        <%= f.submit class: 'btn btn-success' %>
      </p>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <p>
      <%= link_to 'Volver a Actores', actors_path, class: 'btn btn-primary' %>
    </p>
  </div>
</div>