<div class="row">
  <div class="col-sm-12">
    <h1>Actores</h1>
  </div>
</div>
<div class="row"> 
  <% @actors.each do |actor| %>
    <div class="col-sm-6 col-md-4">
      <div class="actor">      
        <img src="<%= actor.image_url %>" alt="<%= actor.name %>">
        <h3><%= actor.name %></h3>
        <p><%= actor.bio %></p>
        <p><strong>Fecha de Nacimiento: </strong><%= actor.birth_date %></p>
        <p><strong>Lugar de Nacimiento: </strong><%= actor.birth_place %></p>
        <% unless actor.alive %>
          <p><strong>Fecha de Fallecimiento: </strong><%= actor.death_date %></p>
          <p><strong>Lugar de Fallecimiento: </strong><%= actor.death_place %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-sm-12">
    <p>
      <%= link_to 'Crear Actor', new_actor_path, class: 'btn btn-primary' %>
    </p>
  </div>
</div>