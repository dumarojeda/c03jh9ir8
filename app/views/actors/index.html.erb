<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Birth Date</th>
    <th>Birth Place</th>
    <th>Image</th>
    <th>Death Date</th>
    <th>Death Place</th>
  </tr>
  <% @actors.each do |actor| %>
    <tr>
      <td><%= actor.name %></td>
      <td><%= actor.bio %></td>
      <td><%= actor.birth_date %></td>
      <td><%= actor.birth_place %></td>
      <td><img src="<%= actor.image_url %>" alt=""></td>
      <% unless actor.alive %>
        <td><%= actor.death_date %></td>
        <td><%= actor.death_place %></td>
      <% end %>
    </tr>
  <% end %>
</table>