<table class="table table-striped">
  <tr>
    <th>Foto</th>
    <th>Nombre</th>
    <th>Bio</th>
    <th>Fecha de Nacimiento</th>
    <th>Lugar de Nacimiento</th>
    <th>Death Date</th>
    <th>Death Place</th>
  </tr>
  <% @actors.each do |actor| %>
    <tr>
      <td><img src="<%= actor.image_url %>" alt=""></td>
      <td><%= actor.name %></td>
      <td><%= actor.bio %></td>
      <td><%= actor.birth_date %></td>
      <td><%= actor.birth_place %></td>
      <% unless actor.alive %>
        <td><%= actor.death_date %></td>
        <td><%= actor.death_place %></td>
      <% end %>
    </tr>
  <% end %>
</table>